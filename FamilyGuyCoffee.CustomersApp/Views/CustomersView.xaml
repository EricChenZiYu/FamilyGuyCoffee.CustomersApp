<UserControl x:Class="FamilyGuyCoffee.CustomersApp.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FamilyGuyCoffee.CustomersApp.Views" 
             xmlns:converters="clr-namespace:FamilyGuyCoffee.CustomersApp.Converters"
             xmlns:viewModels="clr-namespace:FamilyGuyCoffee.CustomersApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:CustomersViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="CustomerDataTemplate" DataType="{x:Type viewModels:CustomerItemViewModel}" >
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="{Binding FirstName, ValidatesOnNotifyDataErrors=False}" FontWeight="Bold" />
                <TextBlock Text="{Binding LastName}"  Margin="5 0 0 0 "/>
                <!-- Changed from FirstName to LastName -->
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Width="260" x:Name="CustomerListGrid" Grid.Column="{Binding NavigationSidee, Converter={StaticResource NavigationSideToGridColumnConvert}}"  Background="#777">
            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Margin="10" Width="75" Command="{Binding AddCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/add.png" Height="18" />
                        <TextBlock Text="Add" />
                    </StackPanel>
                </Button>
                <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0 10 10 10" Width="75"></Button>

                <Button Command="{Binding MoveNavigationCommand}"  Margin="0 10 10 10">
                    <Image Source="/Images/move.png" Height="18"></Image>
                </Button>
            </StackPanel>
            <ListView x:Name="CustomerListView" ItemsSource="{Binding Customers}"
                      SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" 
                      Grid.Row="1" Margin="10 0 10 10"
                      ItemTemplate="{StaticResource CustomerDataTemplate}"
                      >

                <!--DisplayMemberPath="FirstName"-->
                <!--<ListViewItem>Julia</ListViewItem>
                <ListViewItem>Michael</ListViewItem>
                <ListViewItem>Sarah</ListViewItem>-->
            </ListView>
        </Grid>
        <StackPanel Visibility="{Binding HasCustomerSelected , Converter= { StaticResource BooleanToVisibilityConvert}}" Grid.Column="1" Margin="10">
            <!--<StackPanel.Resources>
                <Style TargetType="TextBox" x:Key="TextboxStyleBase" >
                    <Setter Property="Padding" Value="5"></Setter>
                </Style>
                <Style TargetType="TextBox" x:Key="TextBoxStyle" BasedOn="{StaticResource TextboxStyleBase}">
                    <Style.Setters>
                        <Setter Property="Background" Value="#555"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                       
                        --><!--<Setter Property="Grid.Row" Value="2"></Setter>--><!--
                    </Style.Setters>
                </Style>
                <Style TargetType="TextBox"   >
                    <Setter Property="FontStyle" Value="Italic"></Setter>
                </Style>
                --><!--<Style TargetType="{x:Type TextBox}"   >
                    <Setter Property="FontStyle" Value="Italic"></Setter>
                </Style>--><!--
            </StackPanel.Resources>-->
            <Label>Firstname:</Label>
            <TextBox Text="{Binding SelectedCustomer.FirstName,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="FirstnameTextBox" 
                     Style="{StaticResource TextBoxStyle}"
                     ></TextBox>
                     <!--Background="Aqua"-->
            <Label>Last Name:</Label>
            <TextBox Text="{Binding SelectedCustomer.LastName,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="LastnameTextBox" 
                     Style="{StaticResource TextBoxStyle}"
                     ></TextBox>


            <CheckBox IsChecked="{Binding SelectedCustomer.IsDeveloper, Mode=TwoWay}" Margin="0 20 0 0">
                Is Developer
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
