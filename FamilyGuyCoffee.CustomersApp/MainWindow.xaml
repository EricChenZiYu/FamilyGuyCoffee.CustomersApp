    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu  FontSize="20">
            <MenuItem Header="_View">
                <MenuItem Header="_Customers"></MenuItem>
                <MenuItem Header="_Products"></MenuItem>
            </MenuItem>
        </Menu>
        <controls:HeaderControl Grid.Column="0" Grid.Row="1"  />
        <!-- Added HeaderControl here -->
        <ContentControl Grid.Row="2" Grid.Column="0" Content="{Binding SelectedViewModel}"
                        >
        </ContentControl>

        <StatusBar Background="{StaticResource HeaderBackgroundBrush}" Grid.Row="3" >
            <StatusBarItem HorizontalAlignment="Center" FontSize="20" Content="(c) Family Guy Coffee" />
        </StatusBar>
    </Grid>
    <!--</Grid>-->


