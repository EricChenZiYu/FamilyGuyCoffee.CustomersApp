        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyGuyCoffee.CustomersApp"
        mc:Ignorable="d"
        Title="MainWindow"
        d:DesignWidth="500"
        d:DesignHeight="600"
        Height="450" Width="800">
