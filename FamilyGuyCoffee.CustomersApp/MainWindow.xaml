<Window x:Class="FamilyGuyCoffee.CustomersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyGuyCoffee.CustomersApp"
        xmlns:controls="clr-namespace:FamilyGuyCoffee.CustomersApp.Controls"
        xmlns:views="clr-namespace:FamilyGuyCoffee.CustomersApp.Views"
        xmlns:viewModels="clr-namespace:FamilyGuyCoffee.CustomersApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        d:DesignWidth="500"
        d:DesignHeight="600"
        Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:CustomersViewModel}" >
            <views:CustomersView></views:CustomersView>
        </DataTemplate>
    </Window.Resources>
