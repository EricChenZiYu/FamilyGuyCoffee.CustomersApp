<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox" x:Key="TextboxStyleBase" >
        <Setter Property="Padding" Value="5"></Setter>
    </Style>
    <Style TargetType="TextBox" x:Key="TextBoxStyle" BasedOn="{StaticResource TextboxStyleBase}">
        <Style.Setters>
            <Setter Property="Background" Value="#555"></Setter>
            <Setter Property="Background" Value="{StaticResource HeaderBackgroundBrush}"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>

            <!--<Setter Property="Grid.Row" Value="2"></Setter>-->
        </Style.Setters>
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Green"></Setter>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#111111"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TextBox"   >
        <Setter Property="FontStyle" Value="Italic"></Setter>
    </Style>
    <!--<Style TargetType="{x:Type TextBox}"   >
             <Setter Property="FontStyle" Value="Italic"></Setter>
         </Style>-->

</ResourceDictionary>